{
  "name": "pdf-export",
  "version": "2.0.0",
  "extension_id": "pdf",
  "display_name": "PDF Export",
  "description": "Exports the LLM answer as a downloadable PDF document with Markdown-aware formatting. Genie-aware: supports scope-based multi-section PDFs.",
  "author": "TDA Core Team",
  "license": "MIT",
  "category": "Export",
  "extension_tier": "standard",
  "requires_llm": false,
  "keywords": ["pdf", "export", "download", "document", "report", "genie"],
  "files": {
    "extension": "pdf_export.py"
  },
  "output_target": "chat_append",
  "parameters": {
    "supported": true,
    "description": "Scope for genie profiles (coordinator, children, all) or custom document title",
    "examples": ["all", "coordinator", "children", "Monthly Report"],
    "allowed_values": null
  },
  "output_schema": {
    "type": "object",
    "properties": {
      "data": { "type": "string", "description": "Base64-encoded PDF bytes" },
      "filename": { "type": "string", "description": "Suggested filename" },
      "pages": { "type": "integer", "description": "Number of pages" },
      "size_bytes": { "type": "integer", "description": "PDF file size in bytes" }
    }
  },
  "metadata": {
    "tags": ["built-in", "export", "core", "genie-aware"]
  }
}
