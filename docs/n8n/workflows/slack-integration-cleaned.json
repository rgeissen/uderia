    {
      "parameters": {
        "jsCode": "const taskData = $input.item.json;\nconst result = taskData.result;\nconst userName = $('Store Context').item.json.user_name;\nconst query = $('Store Context').item.json.query;\n\nif (!result || !result.result) {\n  return {\n    json: {\n      response_type: \"in_channel\",\n      blocks: [\n        {\n          type: \"section\",\n          text: {\n            type: \"mrkdwn\",\n            text: `âŒ *Error Processing Query*\\n\\n_Question:_ ${query}\\n\\n> No result received from Uderia Platform.`\n          }\n        }\n      ]\n    }\n  };\n}\n\nconst finalAnswer = result.result.final_answer || \"No answer provided\";\nconst profileTag = result.result.profile_tag || \"unknown\";\n\n// Extract token counts\nlet inputTokens = 0;\nlet outputTokens = 0;\n\nif (result.events) {\n  const tokenEvent = result.events.find(e => e.event_type === 'token_update');\n  if (tokenEvent) {\n    inputTokens = tokenEvent.event_data.turn_input || 0;\n    outputTokens = tokenEvent.event_data.turn_output || 0;\n  }\n}\n\n// Format answer for Slack (limit to 3000 chars)\nlet formattedAnswer = finalAnswer;\nif (formattedAnswer.length > 2800) {\n  formattedAnswer = formattedAnswer.substring(0, 2800) + \"...\\n\\n_[Answer truncated for Slack display]_\";\n}\n\n// Create Slack blocks\nreturn {\n  json: {\n    response_type: \"in_channel\",\n    blocks: [\n      {\n        type: \"section\",\n        text: {\n          type: \"mrkdwn\",\n          text: `*Question from @${userName}:*\\n_${query}_`\n        }\n      },\n      {\n        type: \"divider\"\n      },\n      {\n        type: \"section\",\n        text: {\n          type: \"mrkdwn\",\n          text: formattedAnswer\n        }\n      },\n      {\n        type: \"context\",\n        elements: [\n          {\n            type: \"mrkdwn\",\n            text: `ðŸ¤– Powered by *Uderia* | Profile: \\`${profileTag}\\` | Tokens: ${inputTokens + outputTokens}`\n          }\n        ]\n      }\n    ]\n  }\n};"
      },
      "id": "node-format-success",
      "name": "Format Success Response",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [
        3320,
        100
      ]
    },
    {
      "parameters": {
        "jsCode": "const userName = $('Store Context').item.json.user_name;\nconst query = $('Store Context').item.json.query;\nconst taskData = $input.item.json;\nconst errorMsg = taskData.result?.error || \"Unknown error occurred\";\n\nreturn {\n  json: {\n    response_type: \"ephemeral\",\n    blocks: [\n      {\n        type: \"section\",\n        text: {\n          type: \"mrkdwn\",\n          text: `âŒ *Query Failed*\\n\\n_Your question:_ ${query}\\n\\n> ${errorMsg}`\n        }\n      },\n      {\n        type: \"context\",\n        elements: [\n          {\n            type: \"mrkdwn\",\n            text: \"Please try rephrasing your question or contact your admin if the issue persists.\"\n          }\n        ]\n      }\n    ]\n  }\n};"
      },
      "id": "node-format-error",
